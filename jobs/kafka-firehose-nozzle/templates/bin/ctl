#!/bin/bash

JOB=kafka-firehose-nozzle

RUN_DIR=/var/vcap/sys/run/${JOB}
LOG_DIR=/var/vcap/sys/log/${JOB}
CONF_DIR=/var/vcap/jobs/${JOB}/config
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/${JOB}/bin/${JOB} -log-level=<%= p('log_level') %> -stats-interval=10s -config $CONF_DIR/config.toml \
      >>  $LOG_DIR/${JOB}.stdout.log \
      2>> $LOG_DIR/${JOB}.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
